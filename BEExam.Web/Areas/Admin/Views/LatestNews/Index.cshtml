@model LatestNewsIndexVM;
@{
    Layout = "_Layout";
}

<div class="d-flex flex-column justify-content-center p-5">

<a class="btn btn-success" >Create</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Author Name</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>

            <th colspan="2" scope="col">Actions</th
        </tr>
    </thead>
    <tbody>
        @if(Model.LatestNews != null)
        @foreach(var item in Model.LatestNews)
        {
            <tr style="background:@(item.IsDeleted?"red":"")">
                <th scope="row">@item.Id</th>
                <td>@item.AuthorName</td>
                <td> <img width="100" height="100" src="@($"~/newsimages/{item.ImageUrl}")"/> </td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                
                @if (item.IsDeleted)
                {
                    <td> <a asp-action="RevokeDelete" asp-route-id="@item.Id" class="btn btn-warning">RevokeDelete</a>  </td>
                }else
                {
                    <td> <a asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-danger">Delete</a>  </td>
                }
                
                <td> <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>  </td>
            </tr>
        }
        
    </tbody>
</table>

</div>
